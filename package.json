    "@vitest/runner": "^4.0.14",
    "esbuild": "^0.27.0",
    "esbuild-plugin-d.ts": "^1.3.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.7.3",
    "rimraf": "^6.1.2",
    "semantic-release": "^25.0.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.0",
